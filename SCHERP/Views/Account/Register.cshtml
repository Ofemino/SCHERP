@model SCHERP.Models.RegisterViewModel
@{
    ViewBag.Title = "Register Account";
    ViewBag.SubTitle = "New User";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
@section usage{
    <link href="@Url.Content("~/Content/css/MyCustomStyles.css")" rel="stylesheet" />
    @*<script src="@Url.Content("~/dist/sweetalert.min.js")"></script>
        <script src="@Url.Content("~/dist/SweetAlertMethods.js")"></script>
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/dist/sweetalert.css")">*@

}




<div class="row">
    <div class="col-md-8 col-md-offset-2">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal page-form", @id = "pageForm", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
           <div class="row">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        Email: <span class="lblImportant">*</span>
                    </label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", @type = "text", @autocomplete = "off", @placeholder = "Email" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        User Name: <span class="lblImportant">*</span>
                    </label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "required", @type = "text", @autocomplete = "off", @placeholder = "User Name" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        Password: <span class="lblImportant">*</span>
                    </label><div class="col-md-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @autocomplete = "off", @placeholder = "Password" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-md-3 control-label">
                        Confirm Password: <span class="lblImportant">*</span>
                    </label>
                    <div class="col-md-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required", @autocomplete = "off", @placeholder = "Confirm Password" })
                    </div>
                </div>
            </div>
           <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-7 col-md-4">
                        <input type="submit" class="btn btn-success pull-right" value="Register" />
                    </div>
                </div>
            </div>
                            }


    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
